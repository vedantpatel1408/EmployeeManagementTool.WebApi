@model EmployeeManagementTool.Models.RegisterViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


<style>



    .login-page {
        width: 360px;
        padding: 8% 0 0;
        margin: auto;
    }

    .form {
        position: relative;
        z-index: 1;
        background: #FFFFFF;
        max-width: 360px;
        margin: 0 auto 100px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    }

        .form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
        }

        .form button {
            font-family: "Roboto", sans-serif;
            text-transform: uppercase;
            outline: 0;
            background: #31A5FE;
            width: 100%;
            border: 0;
            padding: 15px;
            color: #FFFFFF;
            font-size: 14px;
            -webkit-transition: all 0.3 ease;
            transition: all 0.3 ease;
            cursor: pointer;
        }

            .form button:hover, .form button:active, .form button:focus {
                background: #015EFE;
            }

        .form .message {
            margin: 15px 0 0;
            color: #b3b3b3;
            font-size: 12px;
        }

            .form .message a {
                color: #4CAF50;
                text-decoration: none;
            }

        .form .register-form {
            display: none;
        }

    .container {
        position: relative;
        z-index: 1;
        max-width: 300px;
        margin: 0 auto;
    }

        .container:before, .container:after {
            content: "";
            display: block;
            clear: both;
        }

        .container .info {
            margin: 50px auto;
            text-align: center;
        }

            .container .info h1 {
                margin: 0 0 15px;
                padding: 0;
                font-size: 36px;
                font-weight: 300;
                color: #1a1a1a;
            }

            .container .info span {
                color: #4d4d4d;
                font-size: 12px;
            }

                .container .info span a {
                    color: #000000;
                    text-decoration: none;
                }

                .container .info span .fa {
                    color: #EF3B3A;
                }

    body {
        background: #76b852; /* fallback for old browsers */
        background: rgb(141,194,111);
        background: linear-gradient(7deg, rgba(49,165,254,1) 0%, rgba(49,164,205,1) 50%);
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>


<div class="login-page">
    <div class="form">
        <form class="register-form" method="post" asp-controller="Admin" asp-action="EmployeeLogin" asp-area="Employee">
            <div class="form-floating mb-3">
                @*<input type="text" class="form-control" id="FloatingFirstName" placeholder="FirstName">*@
                @Html.TextBoxFor(model=>model.Firstname,new{@class="form-control", @id="FloatingFirstName", @placeholder="FirstName"})
                <label for="FloatingFirstName"><small>Firstname</small></label>
                @Html.ValidationMessageFor(model => model.Firstname,"",new{@class="text-danger",@style="font-size:13px"})
                
            </div>
            <div class="form-floating mb-3">
                @*<input type="text" class="form-control" id="FloatingLastName" placeholder="LastName">*@
                @Html.TextBoxFor(model => model.Lastname,new{@class="form-control" ,@id="FloatingLastName" ,@placeholder="LastName"})
                <label for="FloatingLastName"><small>Lastname</small></label>
            </div>
            <div class="form-floating mb-3">
                @*<input type="email" class="form-control" id="FloatingEmailId" placeholder="EmailId">*@
                @Html.TextBoxFor(model=>model.Email,new{@class="form-control", @id="FloatingEmailId", @placeholder="EmailId"})
                <label for="FloatingEmailId"><small>Email</small></label>
                @Html.ValidationMessageFor(model=>model.Email,"",new{@class="text-danger",@style="font-size:13px"})
            </div>
            <div class="form-floating mb-3">
                @*<input type="date" class="form-control" id="FloatingDate" placeholder="Date">*@
                @Html.TextBoxFor(model=>model.Dob,new{@type="date", @class="form-control", @id="FloatingDate", @placeholder="Date"})
                <label for="FloatingDate"><small>Date</small></label>
            </div>
            <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" name="Gender" aria-label="Floating label select example" style="font-size:14px">
                    <option selected>Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Unisex">Unisex</option>
                </select>
                <label for="floatingSelect"><small>Select Gender</small></label>
            </div>
            <div class="form-floating">
                @*<input type="password" class="form-control" id="floatingPassword" placeholder="Password">*@
                @Html.PasswordFor(model=>model.Password,new{@class="form-control", @id="floatingPassword", @placeholder="Password"})
                <label for="floatingPassword"><small>Password</small></label>
                @Html.ValidationMessageFor(model=>model.Password,"",new{@class="text-danger",@style="font-size:13px"})
            </div>
            <div class="form-floating">
                @Html.PasswordFor(model=>model.ConfirmPassword,new{@class="form-control", @id="ConfirmPassword", @placeholder="Confirm Password"})
                <label for="ConfirmPassword"><small>Confirm Password</small></label>
                @Html.ValidationMessageFor(model=>model.ConfirmPassword,"",new{@class="text-danger",@style="font-size:13px"})
                
            </div>
            @*<input type="text" placeholder="name" />
                <input type="password" placeholder="password" />
                <input type="text" placeholder="email address" />*@
            <button type="submit" name="Type" value="Create">create</button>
            <p class="message">Already registered? <a href="#">Sign In</a></p>
        </form>


        <form class="login-form form-floating" method="post" asp-controller="EmployeeLogin" asp-action="Employee">
            <span class="text-danger" style="font-size:13px">@TempData["Locked"]</span>
            <span class="text-danger" style="font-size:13px">@TempData["Not Exist"]</span>
            <span class="text-danger" style="font-size:13px">@TempData["LockTrail"]</span>
            <div class="form-floating mb-3">
                @*<input type="text" class="form-control" id="LoginEmail" placeholder="Email">*@
                @Html.TextBoxFor(model=>model.Email,new{@class="form-control", @id="LoginEmail", @placeholder="Email"})
                <label for="LoginEmail"><small>Email</small></label>
                @Html.ValidationMessageFor(model=>model.Email,"",new{@class="text-danger",@style="font-size:13px"})
            </div>
            <div class="form-floating">
                @*<input type="password" class="form-control" id="floatingPassword" placeholder="Password">*@
                @Html.PasswordFor(model=>model.Password,new{@class="form-control", @id="floatingPassword", @placeholder="Password"})
                <label for="floatingPassword"><small>Password</small></label>
                @Html.ValidationMessageFor(model=>model.Password,"",new{@class="text-danger",@style="font-size:13px"})
                <span class="text-danger" style="font-size:13px">@TempData["Wrong PassWord"]</span>
            </div>
            @*<input type="text" placeholder="username" />
                <input type="password" placeholder="password" />*@
            <button type="submit" name="Type" value="Login">login</button>
            <a class="btn text-muted" style="font-size:12px" href="/Admin/Admin/LogIn">Login As Admin</a>
            <p class="message">Not registered? <a>Create an account</a></p>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script>
    $('.message a').click(function(){
        $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
    });
</script>

