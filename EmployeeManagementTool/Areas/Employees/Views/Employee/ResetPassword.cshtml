@model EmployeeManagementTool.Models.PasswordViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


<style>



    .login-page {
        width: 360px;
        padding: 8% 0 0;
        margin: auto;
    }

    .form {
        position: relative;
        z-index: 1;
        background: #FFFFFF;
        max-width: 360px;
        margin: 0 auto 100px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    }

        .form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
        }

        .form button {
            font-family: "Roboto", sans-serif;
            text-transform: uppercase;
            outline: 0;
            background: #31A5FE;
            width: 100%;
            border: 0;
            padding: 15px;
            color: #FFFFFF;
            font-size: 14px;
            -webkit-transition: all 0.3 ease;
            transition: all 0.3 ease;
            cursor: pointer;
        }

            .form button:hover, .form button:active, .form button:focus {
                background: #015EFE;
            }

        .form .message {
            margin: 15px 0 0;
            color: #b3b3b3;
            font-size: 12px;
        }

            .form .message a {
                color: #4CAF50;
                text-decoration: none;
            }

        .form .register-form {
            display: none;
        }

    .container {
        position: relative;
        z-index: 1;
        max-width: 300px;
        margin: 0 auto;
    }

        .container:before, .container:after {
            content: "";
            display: block;
            clear: both;
        }

        .container .info {
            margin: 50px auto;
            text-align: center;
        }

            .container .info h1 {
                margin: 0 0 15px;
                padding: 0;
                font-size: 36px;
                font-weight: 300;
                color: #1a1a1a;
            }

            .container .info span {
                color: #4d4d4d;
                font-size: 12px;
            }

                .container .info span a {
                    color: #000000;
                    text-decoration: none;
                }

                .container .info span .fa {
                    color: #EF3B3A;
                }

    body {
        background: #76b852; /* fallback for old browsers */
        background: rgb(141,194,111);
        background: linear-gradient(7deg, rgba(49,165,254,1) 0%, rgba(49,164,205,1) 50%);
        font-family: "Roboto", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>


<div class="login-page">
    <div class="form">

        @using (Html.BeginForm("ResetPassword", "Employee", new { area = "Employees" }, FormMethod.Post))
        {
            <span class="text-danger" style="font-size:13px">@TempData["OldPassword And Confirm Password"]</span>
            <span class="text-danger" style="font-size:13px">@TempData["Please Reset Password First"]</span>
            <div class="form-floating mb-3">

                @Html.PasswordFor(model=>model.Password,new{@class="form-control", @id="Oldpassword", @placeholder="Old Password"})
                <label for="Oldpassword"><small>Old Password</small></label>
                @Html.ValidationMessageFor(model=>model.Password,"",new{@class="text-danger",@style="font-size:13px"})
                <span class="text-danger" style="font-size:13px">@TempData["OldPasswordNotMatched"]</span>
            </div>
            <div class="form-floating">

                @Html.PasswordFor(model=>model.ConfirmPassword,new{@class="form-control", @id="NewPassword", @placeholder="New Password"})
                <label for="NewPassword"><small>New Password</small></label>
                @Html.ValidationMessageFor(model=>model.ConfirmPassword,"",new{@class="text-danger",@style="font-size:13px"})
                
            </div>
            <div class="form-floating">

                @Html.PasswordFor(model=>model.ConfirmNewPassword,new{@class="form-control", @id="ConfirmNewPassword", @placeholder="Password"})
                <label for="ConfirmNewPassword"><small>Confirm New Password</small></label>
                @Html.ValidationMessageFor(model=>model.ConfirmNewPassword,"",new{@class="text-danger",@style="font-size:13px"})
                <span class="text-danger" style="font-size:13px">@TempData["ConfirmPassword Not Matched"]</span>
            </div>

            <button type="submit" name="Type">Change Password</button>

        }

    </div>
</div>
	
	
	
	
	
	

<partial name="_ValidationScriptsPartial" />

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>


